---
import "../styles/global.css";
import { technologies } from "../data/technologies.js";
---

<div class="py-8 px-4 mx-auto max-w-screen-xl lg:py-16">
  <h1
    class="mb-4 text-4xl font-extrabold tracking-tight leading-none text-gray-900 md:text-3xl lg:text-4xl dark:text-white"
  >
    My Technologies
  </h1>

  <div
    class="grid grid-cols-2 sm:grid-cols-2 md:grid-cols-4 lg:grid-cols-6 gap-4"
  >
    {
      technologies.map((tech) => (
        <div class="h-auto max-w-full rounded-lg">
          <a
            href="#"
            class="block max-w-sm p-6 bg-white border border-gray-200 rounded-lg shadow-sm hover:bg-gray-100 dark:bg-gray-800 dark:border-gray-700 dark:hover:bg-gray-700"
          >
            <div class="flex flex-col items-center pb-1">
              <img
                class="w-20 h-20 mb-3 rounded-full shadow-lg"
                src={tech.image}
                alt={tech.alt}
              />
              <h5 class="mb-2 text-2lg font-bold tracking-tight text-gray-900 dark:text-white text-center">
                {tech.name}
              </h5>
            </div>
          </a>
        </div>
      ))
    }
  </div>
</div>
